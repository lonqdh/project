<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Online Book Store
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
				           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<!-- CSS only -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/mystyle.css') }}">
        
        {% endblock %}

		{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
		{% endblock %}

	</head>
	<body>
		{% block header %}
			<div class="container col-10 mt-3">
				{# bs5-nav-ul #}
				{% if is_granted('ROLE_ADMIN') %}
					<ul id="nav">
						<li>
							<a href="{{ path('product_home')}}">Home</a>
						</li>
						<li>
							<a href="{{ path('product_index')}}">Product</a>
						</li>
						<li>
							<a href="{{ path('designer_index')}}">Designer</a>
						</li>
						<li>
							<a href="{{ path('category_index')}}">Category</a>
						</li>
						<li>
							<a href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% else %}
					<!-- ROLE_CUSTOMER -->
					<ul id="nav">
						<li>
							<a href="{{ path('product_home')}}">Store</a>
						</li>
						<li>
							<a data-bs-toggle="modal" data-bs-target="#modelId">About</a>
						</li>
						<li>
							<a href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% endif %}

			</div>
			{# bs5-modal-default #}

			<!-- Modal -->
			<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">About</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<div class="container text-center">
								<h5 class="text text-primary">Clothing stores of Long Hoang, Tuyen Do, Quoc Viet</h5>
								<h6 class="text text-success">Copyright by Long Hoang, Tuyen Do, Quoc Viet</h6>
								<img src="https://duhocvinedu.edu.vn/wp-content/uploads/2020/11/university-of-greenwich-diem-den-day-uy-vong-o-nuoc-anh.jpg" width="250" height="200">
								{# <iframe width="560" height="315" src="https://www.youtube.com/embed/TuGzkIuFl30" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> #}
								<div style="width:360px;max-width:100%;"><div style="height:0;padding-bottom:56.11%;position:relative;"><iframe width="360" height="202" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameBorder="0" src="https://imgflip.com/embed/64lpgv"></iframe></div><p><a href="https://imgflip.com/gif/64lpgv"></a></p></div>
								<br>
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}
		{% block flash %}
			<div class="container col-md-6 text-center mt-3">
				{% for flash in app.session.flashBag.get('Info') %}
					<p class="alert alert-info">{{ flash }}</p>
				{% endfor %}
				{% for flash in app.session.flashBag.get('Warning') %}
					<p class="alert alert-danger">{{ flash }}</p>
				{% endfor %}
			</div>
		{% endblock %}
		{% block body %}

        
        {% endblock %}

		{% block footer %}
        <div class="footer">
        <footer>
            <!-- <div class="social-contact">
                <a href="#"><i class="fa-brands fa-instagram-square"></i>
                </a>
                <a href="#">
                <i class="fa-brands fa-snapchat-square"></i>
                </a>
                <a href="#">
                <i class="fa-brands fa-twitter-square"></i>
                </a>
                <a href="#">s
                <i class="fa-brands fa-facebook"></i>
                </a>
            </div> -->
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Home</a></li>
                <li class="list-inline-item"><a href="#">Services</a></li>
                <li class="list-inline-item"><a href="#">About</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            </ul>
            <p class="copyright">Long Hoang - Quoc Viet - Danh Tuyen Â© 2022</p>
        </footer>
    </div>
		{% endblock %}
	</body>
</html>