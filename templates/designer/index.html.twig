{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Designer List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('designer_add') }}">
                <img src="{{ asset('images/buttons/addbtn.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Designer Id</th>
        <th class="text text-success">Name</th>
        <th class="text text-success">Image</th>
        <th class="text text-success">Email</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for designer in designers %}
        <tr>
            <td>{{ designer.id }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('designer_detail', {'id' : designer.id }) }}">
                    {{designer.name}}
                </a>
           </td>
           <td>{{ designer.image }}</td>
           <td>{{ designer.email }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('designer_detail', {'id' : designer.id }) }}">
                    <img src="{{ asset('images/buttons/infobtn.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('designer_edit', {'id' : designer.id }) }}">
                    <img src="{{ asset('images/buttons/editbtn.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('designer_delete', {'id' : designer.id }) }}"
                onclick="return confirm('Are you sure to delete this designer ?');">
                    <img src="{{ asset('images/buttons/trash.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
