{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    body {
   justify-content: center;
   align-items: center;
   flex-wrap: wrap;
   background: #232427;
}

</style>

{% endblock %}

{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Category List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('category_add') }}">
                <img src="{{ asset('images/buttons/addbtn.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Category Id</th>
        <th class="text text-success">Category Name</th>
        <th class="text text-success">Category Image</th>
        <th class="text text-success">Category description</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('category_detail', {'id' : category.id }) }}">
                    <img src="{{ category.image }}" width="100" height="100">
                </a>
           </td>
           <td>{{ category.description }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('category_detail', {'id' : category.id }) }}">
                    <img src="{{ asset('images/buttons/infobtn.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('category_edit', {'id' : category.id }) }}">
                    <img src="{{ asset('images/buttons/editbtn.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('category_delete', {'id' : category.id }) }}"
                onclick="return confirm('Are you sure to delete this category ?');">
                    <img src="{{ asset('images/buttons/trash.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}