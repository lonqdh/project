{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    body {
   justify-content: center;
   align-items: center;
   flex-wrap: wrap;
   background: #232427;
}

</style>

{% endblock %}

{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
<div class="container col-md-5 text-center mt-3">
   <div class="card p-3 bg-light">
      <h3 class="alert alert-primary">Add Category</h3>
      {{ form_start (categoryForm) }}
      <div class="form-group">
         <label class="text text-warning h6">Category Name</label>
         {{ form_widget(categoryForm.name, {
            'attr' : {
               'class' : 'form-control',
               'placeholder' : 'Enter Category name'
            }
         }) }}
      </div>

      <div class="form-group">
         <label class="text text-success h6">Category Image</label>
         {{
            form_widget(categoryForm.image, {
               'attr' : {
                  'class' : 'form-control',
                  'placeholder' : 'Enter Category image'
               }
            })
         }}
      </div>

      

      <div class="form-group">
         <label class="text text-success h6">Category Description</label>
         {{
            form_widget(categoryForm.description, {
               'attr' : {
                  'class' : 'form-control',
                  'placeholder' : 'Enter Category email'
               }
            })
         }}
      </div>
      <div class="form-group mt-2">
            <input class="btn btn-outline-danger" type="submit" value="Add">
      </div>
      {{ form_end (categoryForm) }}
   </div>
</div>
{% endblock %}