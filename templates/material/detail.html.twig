{% extends "base.html.twig" %}
{% block header %}
<style>

/* center container in the middle */
html {
  display: grid;
  min-height: 100%;
}

body {
  display: grid;
  background: #E0C9CB;
  font-family: sans-serif;

}

.container {
  position: relative;
  margin: auto;
  overflow: hidden;
  width: 430px;
  height: 550px;
  background: #F5F5F5;
  box-shadow: 5px 5px 15px rgba(#BA7E7E, .5);
  border-radius: 10px;
}

p {
  font-size: 1.1em;
  color: #BA7E7E;
  letter-spacing: 1px;
}

h1 {
  font-size: 1.5em;
  color: #4E4E4E;
  margin-top: -5px;
}

img {
  width: 330px;
  height: 350px;
  margin: auto;
  margin-top: 30px;
  display: block;
}



</style>

{% if is_granted('ROLE_ADMIN') %}
					<ul id="nav">
						<li >
							<a  href="{{ path('product_home')}}">Home</a>
						</li>
						<li >
							<a  href="{{ path('product_index')}}">Product</a>
						</li>
						<li >
							<a  href="{{ path('designer_index')}}">Designer</a>
						</li>
						<li >
							<a  href="{{ path('category_index')}}">Category</a>
						</li>
						<li >
							<a  href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% else %}
					<!-- ROLE_CUSTOMER -->
					<ul class="nav justify-content-center bg-warning">
						<li >
							<a  href="{{ path('product_home')}}">Store</a>
						</li>
						<li >
							<a  data-bs-toggle="modal" data-bs-target="#modelId">About</a>
						</li>
						<li >
							<a  href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% endif %}

			</div>

{% endblock %}



