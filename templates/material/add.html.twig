{# format giao diện thủ công => add từng thông tin trong form #}
{% extends "base.html.twig" %}


{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    body {
   justify-content: center;
   align-items: center;
   flex-wrap: wrap;
   background: #232427;
}

</style>

{% endblock %}

{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
<div class="container col-md-5 text-center mt-3">
   <div class="card p-3 bg-light">
      <h3 class="alert alert-primary">Add material</h3>
      {{ form_start (materialForm) }}
      <div class="form-group">
         <label class="text text-warning h6">Material Name</label>
         {{ form_widget(materialForm.name, {
            'attr' : {
               'class' : 'form-control',
               'placeholder' : 'Enter material name'
            }
         }) }}
      </div>

      <div class="form-group">
         <label class="text text-success h6">Color Name</label>
         {{
            form_widget(materialForm.color, {
               'attr' : {
                  'class' : 'form-control',
                  'placeholder' : 'Enter color name'
               }
            })
         }}
      </div>

      <div class="form-group">
         <label class="text text-success h6">Texture Name</label>
         {{
            form_widget(materialForm.texture, {
               'attr' : {
                  'class' : 'form-control',
                  'placeholder' : 'Enter texture name'
               }
            })
         }}
      </div>

      <div class="form-group">
         <label class="text text-success h6">Fabric Name</label>
         {{
            form_widget(materialForm.fabric, {
               'attr' : {
                  'class' : 'form-control',
                  'placeholder' : 'Enter fabric name'
               }
            })
         }}
      </div>
      <div class="form-group mt-2">
            <input class="btn btn-outline-danger" type="submit" value="Add">
      </div>
      {{ form_end (materialForm) }}
   </div>
</div>
{% endblock %}