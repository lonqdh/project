{% extends "base.html.twig" %}

{% block header %}
<style>

/* center container in the middle */
html {
  display: grid;
  min-height: 100%;
}

body {
  display: grid;
  background: #E0C9CB;
  font-family: sans-serif;
}

.container {
  position: relative;
  margin: auto;
  overflow: hidden;
  width: 520px;
  height: 400px;
  background: #F5F5F5;
  box-shadow: 5px 5px 15px rgba(#BA7E7E, .5);
  border-radius: 10px;
}

p {
  font-size: 0.6em;
  color: #BA7E7E;
  letter-spacing: 1px;
}

p a {
  color: #BA7E7E;
  letter-spacing: 1px;
}

h1 {
  font-size: 1.2em;
  color: #4E4E4E;
  margin-top: -5px;
    text-transform: uppercase;
}

img {
  width: 50%;
  margin-top: 47px;
}

.slideshow-buttons {
  top: 70%;
  display: none;
}
{# 
.one, .two, .three, .four {
  position: absolute;
  width: 7px;
  height: 7px;
  border-radius: 50%;
  background: #444;
} #}
{# 
.one {
  left: 22%;
}
.two {
  left: 27%;
}
.three {
  left: 32%;
}
.four {
  left: 37%;
} #}

.manufacturer {
  position: absolute;
  width: 40%;
  height: 100%;
  top: 10%;
  left: 60%;
}

.desc {
  text-transform: none;
  letter-spacing: 0;
  margin-bottom: 17px;
  color: #333;
  font-size: .7em;
  line-height: 1.6em;
  margin-right: 25px;
  text-align: justify;
}

.add {
  width: 67%;
}

.like {
  width: 22%;
}

.sizes {
  display: grid;
  color: #ffffff;
  grid-template-columns: repeat(auto-fill, 30px);
  width: 10%;
  grid-gap: 4px;
  margin-left: 20px;
  margin-top: 5px;
}

.sizes:hover{
   cursor: pointer;
}

.pick {
  margin-top: 11px;
  margin-bottom:0;
  margin-left: 20px;
}

.size {
  padding: 9px;
  border: 1px solid #E0C9CB;
  font-size: 0.7em;
  text-align: center;
} 

.sizes:hover {
   background: #BA7E7E;
    color: #ffffff;
    transition: all .4s ease-in-out;

}

{# footer {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 0.8em;
  text-transform: uppercase;
  padding: 10px;
  p {
    letter-spacing: 3px;
  }
  a {
    color: #ffffff;
    text-decoration: none;
    &:hover {
      color: #7d7d7d;
    }
  }
} #}


</style>



{% endblock %}




{% block body %}
<div class="container">
  <div class="images">
    <img src="{{manufacturer.image}}" />
  </div>
  <div class="manufacturer">
    <h1>{{manufacturer.name}}</h1>
    <p><a class="text-decoration-none" href="">
    {{manufacturer.email}}
    </a>
    </p>
  </div>
</div>

<footer>
  
</footer>
{% endblock %}

{% block flash %}{% endblock %}

{% block footer %}{% endblock %}