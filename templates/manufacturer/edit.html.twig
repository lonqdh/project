{# format giao diện form tự động bằng bootstrap #}
{% form_theme manufacturerForm 'bootstrap_5_layout.html.twig' %}
{% extends "base.html.twig" %}

{% block header %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    body {
   justify-content: center;
   align-items: center;
   flex-wrap: wrap;
   background: #232427;
}

</style>

{% if is_granted('ROLE_ADMIN') %}
					<ul id="nav">
						<li >
							<a  href="{{ path('product_home')}}">Home</a>
						</li>
						<li >
							<a  href="{{ path('product_index')}}">Product</a>
						</li>
						<li >
							<a  href="{{ path('designer_index')}}">Designer</a>
						</li>
						<li >
							<a  href="{{ path('category_index')}}">Category</a>
						</li>
						<li >
							<a  href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% else %}
					<!-- ROLE_CUSTOMER -->
					<ul class="nav">
						<li >
							<a  href="{{ path('product_home')}}">Store</a>
						</li>
						<li >
							<a  data-bs-toggle="modal" data-bs-target="#modelId">About</a>
						</li>
						<li >
							<a  href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
				{% endif %}

			</div>
{% endblock %}

{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
<div class="container col-md-4 text-center mt-3">
   <div class="card p-3 bg-light">
      <h3 class="alert alert-primary">Edit manufacturer</h3>
      {{ form_start(manufacturerForm) }}
      
      {{ form_widget(manufacturerForm)}}
      <input class="btn btn-outline-danger" type="submit" value="Edit">

      {{ form_end(manufacturerForm) }}
   </div>
</div>
{% endblock %}