{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-8 text-center mt-3">
		<table class="table table-light">
			<tr>
				<th colspan="3">
					<h1 class="text text-primary">Manufacturer List</h1>
				</th>
				<th>
					<a class="text-decoration-none" href="{{ path('manufacturer_add') }}">
						<img src="{{ asset('images/buttons/addbtn.png') }}" width="40" height="40">
					</a>
				</th>
			</tr>
			<tr>
				<th class="text text-success">Manufacturer Id</th>
				<th class="text text-success">Manufacturer Name</th>
				<th class="text text-success">Manufacturer Image</th>
				<th class="text text-success">Manufacturer E-mail</th>
				<th class="text text-success">Actions</th>
			</tr>
			{% for manufacturer in manufacturers %}
				<tr>
					<td>{{ manufacturer.id }}</td>
					<td>
						<a class="text-decoration-none" href="{{ path('manufacturer_detail', {'id' : manufacturer.id }) }}">
							{{manufacturer.name}}
						</a>
					</td>
					<td>
						<a class="text-decoration-none" href="{{ path('manufacturer_detail', {'id' : manufacturer.id }) }}">
							<img src="{{ manufacturer.image }}" width="100" height="100">
						</a>
					</td>
					<td>{{ manufacturer.email }}</td>
					<td>
						<a class="text-decoration-none" href="{{ path('manufacturer_detail', {'id' : manufacturer.id }) }}">
							<img src="{{ asset('images/buttons/infobtn.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('manufacturer_edit', {'id' : manufacturer.id }) }}">
							<img src="{{ asset('images/buttons/editbtn.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('manufacturer_delete', {'id' : manufacturer.id }) }}" onclick="return confirm('Are you sure to delete this manufacturer ?');">
							<img src="{{ asset('images/buttons/trash.png') }}" width="40" height="40">
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
