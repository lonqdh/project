{# format giao diện form tự động bằng bootstrap #}
{% form_theme productForm 'bootstrap_5_layout.html.twig' %}
{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    body {
   justify-content: center;
   align-items: center;
   flex-wrap: wrap;
   background: #232427;
}

</style>

{% endblock %}

{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="card p-3 bg-light">
      <h3 class="alert alert-primary">Add product</h3>
      {{ form_start(productForm) }}
         
      {{ form_widget(productForm)}}
      <input class="btn btn-outline-danger" type="submit" value="Add">

      {{ form_end(productForm) }}
   </div>
</div>
{% endblock %}