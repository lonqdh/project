
{# thiết kế giao diện của admin theo dạng bảng #}
{% extends "base.html.twig" %}

{% block body %}
	<div class="container col-md-8 text-center mt-3">
		<table class="table table-light">
			<tr>
				<th colspan="3">
					<h1 class="text text-primary">Product List</h1>
				</th>
				<th>
					<a class="text-decoration-none" href="{{ path('product_add') }}">
						<img src="{{ asset('images/buttons/addbtn.png') }}" width="40" height="40">
					</a>
				</th>
			</tr>
			<tr>
				<th class="text text-success">Product Id</th>
				<th class="text text-success">Product Title</th>
				<th class="text text-success">Product Image</th>
				<th class="text text-success">Product Description</th>
				<th class="text text-success">Product Quantity</th>
				<th class="text text-success">Product Size</th>
				<th class="text text-success">Product Price</th>

				<th class="text text-success">Actions</th>
			</tr>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>
						<a href="{{ path('product_detail', {'id' : product.id }) }}">
							{# <img src="{{ asset('images/products/'~product.image)}}" width="100" height="120"> #}
							<img src="{{product.image}}" width="100" height="100" alt="">
						</a>
					</td>
					<td>{{ product.description }}</td>
					<td>{{ product.quantity }}</td>
					<td>{{ product.size }}</td>
					<td>{{ product.price }}</td>

					<td>
						<a class="text-decoration-none" href="{{ path('product_detail', {'id' : product.id }) }}">
							<img src="{{ asset('images/buttons/infobtn.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('product_edit', {'id' : product.id }) }}">
							<img src="{{ asset('images/buttons/editbtn.png') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('product_delete', {'id' : product.id }) }}" onclick="return confirm('Are you sure to delete this product ?');">
							<img src="{{ asset('images/buttons/trash.png') }}" width="40" height="40">
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}